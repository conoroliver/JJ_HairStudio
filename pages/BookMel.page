        <li class="tab" style="padding-right: 2rem"><a class="slds-context-bar__label-action slds-text-color_inverse"
                                                       href="About">About</a>
        </li>
        <li class="tab"><a class="slds-context-bar__label-action slds-text-color_inverse" href="Contact">Contact</a>
        </li>
        <li class="tab"><a class="slds-context-bar__label-action slds-text-color_inverse active" href="Schedule">Book</a></li>
        <li class="tab"><a class="slds-context-bar__label-action slds-text-color_inverse" href="Home">Home</a>
        </li>
    </ul>
    <apex:form >
        <div class="custom-background slds-grid slds-container_large slds-wrap slds-grid_align-spread slds-grid_vertical-align-start">
            <div class="slds-col slds-size_1-of-1 image-container">
                <div class="logo-container">
                    <apex:image id="logo" value="{!$Resource.Logo}" styleClass="logo" alt="Studio logo"/>
                </div>    
                
                  
            </div>
         <div id="calendar-container">
            <div id="calendar"></div>
        </div>   
        </div>
        
    </apex:form>
    
