<apex:page showHeader="false" sidebar="false" doctype="html-5.0" standardStylesheets="false"
           controller="BookMelController">
           
    <link href="{!$Resource.fccssmin}" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
          integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
          crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.21.0/moment.js"></script>
    <script src="{!$Resource.fcminjs}"></script>       
           
    <style type="text/css">

        .rounded{
            border-radius: 6px;
        }
        
        

        .tab {
            float: right;
        }
        
        li a {
            display: block;
            text-align: center;
            padding: 2rem 2rem;
            text-decoration: none;
            height: 3.25rem; 
        }

        li a:hover {
            background-color: #EB3B3B;
        }
        
        
        
        .active {
            background-color: #ff6666 !important;
           }
           
        .custom-background {
             background-color: #8F8F8F;
             border-width: 10px;
             border-color: #333333;
             padding-bottom:7rem;
             margin-bottom:8rem;
             width: 75vw;
             
             margin-left:auto;
             margin-right:auto;
             
        }
        
        .font-scale {
            font-size: calc(0.6em + 1vmin);
        }
            
        .right {
            float: right;
        }
        
        .center {
            border-radius:10px;
            margin-left:auto;
            margin-right:auto;
        }
        
        #nav-bar{
            list-style-type: none;
            margin: 0;
            padding: 0rem;
            overflow: hidden;
            background-color: #2E2E2E;
            border-width: 2px;
            border-color: #000000;
            position: relative;
        }
        
        #title-box{
            width: 50%;
            margin-left: auto;
            margin-right: auto;
            border-width: 3px;
            text-shadow: 1px 2px #000000;
            border-radius:10px;
            border-color: #F54747;
            background-color: rgba(180,180,180,.5);
            position: absolute;
            top: 33%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
        
        
        .info-box{
            background-color: #8F8F8F !important;
        }
        
        .book-media{
            margin-top:2rem;
            padding: 0rem 2rem;;
        }
        
        .book-button{
            border-width: 1px !important;
            border-color: #FFFFFF !important;
            color:white !important;
            background-color: #ff6666 !important;
            padding: .25rem 1rem .25rem !important;
        }
        
        .book-button:hover{
            background-color: #EB3B3B !important;
        }
        
        .image-container {
            background-image: url("{!$Resource.ShopPanorama}");
            background-size: cover;
            background-repeat: no-repeat;
            background-position: 50% 50%; 
            position: relative;
            text-align: center;
            color: white;
            height:15em;
        }
        
        #title-text{
            padding: .75rem 0rem .75rem
        }
        
        #headshots{
            height=100px
            overflow:hidden;
        }
        
        #map {
            line-height:normal !important;
            margin-top:1rem;
            width:25%;
            float:right;
            margin-right:2rem;
            margin-bottom:1rem;
            height:12em;
            color:black !important;
         }
         .logo-container {
              background-color: rgba(245,71,71,.5);
              height:10em;
              width:10em;
              float:left;
              margin-left:5%;
              margin-top: 5px;
              padding:.5rem;
              
              padding-bottom: 9.5rem;
         }
         
         #calendar-container{
             
             padding:1rem;
             
             height: 70vh;        
         }
         
         #calendar{
             width: 50%;
             float: right;
         }
                 





    </style>

    
    <script>
    
    $(document).ready(function() {
      
        
       $('#calendar').fullCalendar({
            defaultView: 'month',
            height: 'parent',
            events: 'https://fullcalendar.io/demo-events.json'
       });
        console.log('drawn')
    });
    </script>
    

